{
    "version": "1.0.0",
    "io_controller": {
        "position_sensor_pin": 7,
        "conveyor_pin": 29,
        "rejector_pin": 31,
        "position_register": "0x02448030 w 0x040",
        "conveyor_register": "0x02430068 w 0x004",
        "rejector_register": "0x02430070 w 0x004"
    },
    "camera": {
        "index": 0,
        "exposure": 10000,
        "gain": 10.0,
        "save_images": true
    },
    "detector": {
        "model_name": "yolov11n",
        "models_dir": "models",
        "confidence_threshold": 0.25,
        "nms_threshold": 0.45,
        "use_dla": true,
        "dla_core": 0,
        "class_names": ["scratch", "dent", "stain", "crack", "deformation"]
    },
    "api": {
        "api_url": "http://example.com/api",
        "auth_token": "",
        "line_name": "Line01",
        "product_type": "QC",
        "timeout": 10,
        "max_retries": 3,
        "retry_delay": 5
    },
    "display": {
        "enabled": true,
        "window_name": "瑕疵检测系统",
        "fullscreen": false,
        "resolution": [1920, 1080],
        "display_time": 2.0
    },
    "ejection": {
        "enabled": true,
        "threshold": 0.5,
        "delay": 1.0,
        "duration": 0.5
    },
    "output_dir": "data/images",
    "stats_interval": 3600
}
